	},
]
---

<Layout>
	<main class="p-12 text-bg-mode">
		<div
			class="flex flex-col rounded-lg border border-slate-800 text-slate-800 bg-slate-50"
		>
			<div class="flex flex-col md:flex-row gap-4 border-b-2">
				<img
					class="w-full md:w-1/3 rounded-tl-lg rounded-tr-lg md:rounded-tr-none"
					src="/blackwing-astro/images/blog-4-opt.jpg"
					alt="Empleado 1"
				/>
				<div
					class="w-full md:w-2/3 min-h-full flex flex-col items-between justify-between py-4 rounded-lg gap-4"
				>
					<h5 class="text-xl text-center">Título de la noticia</h5>
					<p>
						Lorem ipsum, dolor sit amet consectetur adipisicing elit. Odio
						fugiat corrupti, aut perferendis quod amet animi eius soluta placeat
						fugit saepe obcaecati mollitia iste dolorum iusto molestiae quis
						tenetur rem?
					</p>
					<p class="card-text text-black-50">
						Lorem ipsum, dolor sit amet consectetur adipisicing elit.
					</p>
				</div>
			</div>
			<div class="text-center mx-auto py-1 bg-slate-100 w-full rounded-b-lg">
				<a
					class="text-blue-500 text-sm hover:cursor-pointer hover:underline"
					href="#">Seguir leyendo</a
				>
			</div>
		</div>
		<div class="mt-8">
			<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
				{
					posts.map((post) => (
						<div class="flex flex-col border border-slate-800 text-slate-800 bg-slate-50 rounded-lg">
							<img
								class="rounded-t-lg sm:h-[200px]"
								src={post.image}
								alt={post.alt}
							/>
							<div class="flex flex-col items-between justify-between p-2 gap-4 border-b-2">
								<h5 class="text-xl text-center">{post.title}</h5>
								<p>{post.content}</p>
								<p class="card-text text-black-50">
									Lorem ipsum, dolor sit amet consectetur adipisicing elit.
								</p>
							</div>
							<div class="text-center mx-auto py-1 bg-slate-100 w-full rounded-b-lg">
								<a
									class="text-blue-500 text-sm hover:cursor-pointer hover:underline"
									href="#"
								>
									Seguir leyendo
								</a>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</main>
</Layout>
