---
import Menu from '../components/Menu/Menu.astro'
import Footer from '../components/Footer/Footer.astro'

interface Props {
	pageTitle?: string
	description?: string
}

const { pageTitle = 'Asesoria financiera', description = '' } = Astro.props
---

<!DOCTYPE html>
<html lang="es-AR">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<title>Balck Wing - {pageTitle}</title>
	</head>
	<body
		class="bg-slate-100 text-slate-800 dark:bg-slate-950 dark:text-slate-100 h-screen"
	>
		<Menu />
		<slot />
		<Footer />
	</body>
</html>
